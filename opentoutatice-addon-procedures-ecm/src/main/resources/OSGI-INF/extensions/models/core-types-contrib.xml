<?xml version="1.0"?>

<component name="org.osivia.procedures.models.doctypes" version="1.0">

	<require>org.nuxeo.ecm.core.schema.TypeService</require>
	<require>org.osivia.procedures.instances.doctypes</require>
	
	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="schema">

        <schema name="procedure" prefix="pcd" src="schemas/procedure.xsd" />
		<schema name="globalVariablesDefinitions" prefix="gvd" src="schemas/globalVariablesDefinitions.xsd" />
		<schema name="step" prefix="step" src="schemas/step.xsd" />
		<schema name="globalVariablesReferences" prefix="gvr" src="schemas/globalVariablesReferences.xsd" />
		<schema name="actions" prefix="act" src="schemas/actions.xsd" />
		
	</extension>
	
	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="doctype">
		
		<doctype name="ProceduresModelsContainer" extends="Document">
			<facet name="Folderish" />
			<schema name="dublincore" />
		</doctype>
		
		<doctype name="ProcedureModel" extends="Document">
			<schema name="dublincore" />
			<schema name="procedure" />
		</doctype>
		
	</extension>
	
	<extension target="org.nuxeo.ecm.platform.types.TypeService"
		point="types">
		
		<type id="ProceduresModelsContainer">
			<subtypes>
				<type>ProcedureModel</type>
			</subtypes>
		</type>
		
	</extension>
	
	<extension target="org.nuxeo.ecm.core.lifecycle.LifeCycleService"
		point="types">

		<types>
			<type name="ProceduresModel">default</type>
			<type name="Procedure">default</type>
		</types>

	</extension>

</component>
