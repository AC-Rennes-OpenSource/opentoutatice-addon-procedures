<?xml version="1.0"?>
<component name="org.osivia.procedures.instances.actions">

	<require>org.nuxeo.ecm.platform.actions.ActionService</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="actions">

		<action id="startProcedure" link="#{routingActions.startProcedure}"
			order="10" label="Start Procedure">
			<category>SUBVIEW_UPPER_LIST</category>
			<filter>
				<rule grant="true">
					<type>Procedure</type>
				</rule>
			</filter>
		</action>
		
		<action id="cancelProcedure" link="#{routingActions.cancelProcedure}"
			order="20" label="Cancel Procedure">
			<category>SUBVIEW_UPPER_LIST</category>
			<filter>
				<rule grant="true">
					<type>Procedure</type>
				</rule>
			</filter>
		</action>

	</extension>

</component>